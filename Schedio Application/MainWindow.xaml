<Window x:Class="Schedio_Application.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Schedio_Application"
        mc:Ignorable="d"
        Title="Schedio" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        MinWidth="640"
        Icon="pack://application:,,,/Resources/General/title_icon.ico">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition  Height="70"/>
            <RowDefinition  Height="*"/>
        </Grid.RowDefinitions>

        <Rectangle Fill="#253093">

        </Rectangle>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Width="40" Height="25" Margin="10" Foreground="White"   Background="#253093" BorderThickness="0">Home</Button>
            <Button Width="40" Height="25" Margin="10" Foreground="White" Background="#253093" BorderThickness="0">New</Button>
            <Button Width="40" Height="25" Margin="10" Foreground="White" Background="#253093" BorderThickness="0">Open</Button>
        </StackPanel>

    </Grid>
</Window>
