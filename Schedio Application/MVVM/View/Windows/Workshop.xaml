<Window x:Class="Schedio_Application.MVVM.View.Windows.Workshop"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Schedio_Application.MVVM.View.Windows"
        xmlns:userControls="clr-namespace:Schedio_Application.MVVM.View.UserControls"
        mc:Ignorable="d" Height="720" Width="1280" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Title="Schedio Workshop"
        Icon="pack://application:,,,/Resources/General/title_icon.ico"
        Background="{StaticResource PrimaryBackground}">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="3">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!-- Menu    -->
        <Menu Grid.Row="0" Height="20">
            <MenuItem>
                <MenuItem.Header>
                    <TextBlock Text="Menu"/>
                </MenuItem.Header>

                <MenuItem>
                    <MenuItem.Header>
                        <TextBlock Text="New"/>
                    </MenuItem.Header>
                </MenuItem>
                <MenuItem>
                    <MenuItem.Header>
                        <TextBlock Text="Open"/>
                    </MenuItem.Header>
                </MenuItem>
                <Separator/>
                <MenuItem>
                    <MenuItem.Header>
                        <TextBlock Text="Save"/>
                    </MenuItem.Header>
                </MenuItem>
                <MenuItem>
                    <MenuItem.Header>
                        <TextBlock Text="Save as"/>
                    </MenuItem.Header>
                </MenuItem>
                <Separator/>
                <MenuItem>
                    <MenuItem.Header>
                        <TextBlock Text="Help"/>
                    </MenuItem.Header>
                </MenuItem>
                <MenuItem>
                    <MenuItem.Header>
                        <TextBlock Text="About Us"/>
                    </MenuItem.Header>
                </MenuItem>
            </MenuItem>
        </Menu>

        <!-- Controls -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="15"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3  *"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Margin="2" Grid.RowSpan="2" BorderBrush="{StaticResource PrimaryShadeColor}" BorderThickness="1,0,1,0"/>
            <Border Margin="2" Grid.RowSpan="2" BorderBrush="{StaticResource PrimaryShadeColor}" BorderThickness="1,0,1,0" Grid.Column="2"/>
            <TextBlock Text="Edit"
                       HorizontalAlignment="Center"
                       FontSize="11"
                       Grid.Row="1"
                       Foreground="{StaticResource SecondaryShadeColor}"/>
            <TextBlock Text="View"
                       HorizontalAlignment="Center"
                       FontSize="11"
                       Grid.Row="1"
                       Grid.Column="1"
                       Foreground="{StaticResource SecondaryShadeColor}"/>
            <TextBlock Text="Tools and Management"
                       HorizontalAlignment="Center"
                       FontSize="11"
                       Grid.Row="1"
                       Grid.Column="2"
                       Foreground="{StaticResource SecondaryShadeColor}"/>

            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource ImageButton}" Margin="10,0">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Image Height="35" Stretch="Uniform" Source="pack://application:,,,/Resources/Images/sequence.png"/>
                        <TextBlock Text="Room Order" Grid.Row="1" FontSize="11"/>
                    </Grid>
                </Button>
                <Button Style="{StaticResource ImageButton}" Margin="10,0">
                    <Grid Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Image Stretch="Uniform" Source="pack://application:,,,/Resources/Images/colorwheel.png"/>
                        <TextBlock Text="Colorize" Grid.Row="1" FontSize="11"/>
                    </Grid>
                </Button>
                <Button Style="{StaticResource ImageButton}" Margin="10,0">
                    <Grid Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Image Stretch="Uniform" Source="pack://application:,,,/Resources/Images/clear.png"/>
                        <TextBlock Text="Clear" Grid.Row="1" FontSize="11"/>
                    </Grid>
                </Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Column="1">
                <Button Style="{StaticResource ImageButton}" Margin="10,0">
                    <Grid Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Image Stretch="Uniform" Source="pack://application:,,,/Resources/Images/hide.png"/>
                        <TextBlock Text="Hide" Grid.Row="1" FontSize="11"/>
                    </Grid>
                </Button>
                <Button Style="{StaticResource ImageButton}" Margin="10,0">
                    <Grid Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Image Stretch="Uniform" Source="pack://application:,,,/Resources/Images/preview.png"/>
                        <TextBlock Text="Preview" Grid.Row="1" FontSize="11"/>
                    </Grid>
                </Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Column="2">
                <Button Style="{StaticResource ImageButton}" Margin="10,0">
                    <Grid Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Image Stretch="Uniform" Source="pack://application:,,,/Resources/Images/manage.png"/>
                        <TextBlock Text="Manage" Grid.Row="1" FontSize="11"/>
                    </Grid>
                </Button>
                <Button Style="{StaticResource ImageButton}" Margin="10,0">
                    <Grid Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Image Stretch="Uniform" Source="pack://application:,,,/Resources/Images/expand.png"/>
                        <TextBlock Text="Expand" Grid.Row="1" FontSize="11"/>   
                    </Grid>
                </Button>
                <Button Style="{StaticResource ImageButton}" Margin="10,0">
                    <Grid Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Image Stretch="Uniform" Source="pack://application:,,,/Resources/Images/find.png"/>
                        <TextBlock Text="Find" Grid.Row="1" FontSize="11"/>
                    </Grid>
                </Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Column="3" HorizontalAlignment="Center">
                <Button Style="{StaticResource ImageButton}"
                        Margin="10,0">
                    <Grid Margin="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Image Stretch="Uniform"
                               Source="pack://application:,,,/Resources/Images/export.png"/>
                        <TextBlock Text="Export as"
                                   Grid.Row="1"
                                   FontSize="11"/>
                    </Grid>
                </Button>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>
            
            <!-- Tabcontrol for canvas -->
            <TabControl TabStripPlacement="Bottom" BorderThickness="0,1,0,0" BorderBrush="{StaticResource SecondaryShadeColor}">
                <TabItem Header="Monday">
                    <TabItem.Content>
                        <ScrollViewer Name="sv_Canvas" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Auto" ScrollChanged="sv_Canvas_ScrollChanged" Style="{StaticResource MainScrollViewer}" Background="Transparent">
                            <Canvas Background="AliceBlue" Height="2000" Width="2500">

                                <Canvas Name="HorizontalLineContainer" Canvas.ZIndex="1" Canvas.Top="50" Canvas.Left="100" Height="200" Width="200" Margin="0,60,0,0">
                                    <Rectangle Fill="{StaticResource PrimaryShadeColor}" Height="1" Width="2500" Canvas.Top="9"/>
                                    <Rectangle Fill="{StaticResource PrimaryShadeColor}" Height="1" Width="2500" Canvas.Top="129"/>
                                    <Rectangle Fill="{StaticResource PrimaryShadeColor}" Height="1" Width="2500" Canvas.Top="249"/>
                                    <Rectangle Fill="{StaticResource PrimaryShadeColor}" Height="1" Width="2500" Canvas.Top="369"/>
                                    <Rectangle Fill="{StaticResource PrimaryShadeColor}" Height="1" Width="2500" Canvas.Top="489"/>
                                    <Rectangle Fill="{StaticResource PrimaryShadeColor}" Height="1" Width="2500" Canvas.Top="609"/>
                                    <Rectangle Fill="{StaticResource PrimaryShadeColor}" Height="1" Width="2500" Canvas.Top="729"/>
                                    <Rectangle Fill="{StaticResource PrimaryShadeColor}" Height="1" Width="2500" Canvas.Top="849"/>
                                    <Rectangle Fill="{StaticResource PrimaryShadeColor}" Height="1" Width="2500" Canvas.Top="969"/>
                                    <Rectangle Fill="{StaticResource PrimaryShadeColor}" Height="1" Width="2500" Canvas.Top="1089"/>
                                    <Rectangle Fill="{StaticResource PrimaryShadeColor}" Height="1" Width="2500" Canvas.Top="1209"/>
                                    <Rectangle Fill="{StaticResource PrimaryShadeColor}" Height="1" Width="2500" Canvas.Top="1329"/>
                                    <Rectangle Fill="{StaticResource PrimaryShadeColor}" Height="1" Width="2500" Canvas.Top="1449"/>
                                    <Rectangle Fill="{StaticResource PrimaryShadeColor}" Height="1" Width="2500" Canvas.Top="1569"/>
                                    <Rectangle Stroke="{StaticResource PrimaryShadeColor}" Height="1" Width="2500" Canvas.Top="1689"/>
                                </Canvas>
                                <Canvas Name="VerticalLineContainer" Canvas.ZIndex="1" Canvas.Top="50" Canvas.Left="100" Height="200" Width="200">
                                    <Rectangle Fill="{StaticResource PrimaryShadeColor}" Height="2500" Width="1" Canvas.Left="205"/>
                                    <Rectangle Fill="{StaticResource PrimaryShadeColor}" Height="2500" Width="1" Canvas.Left="405"/>
                                    <Rectangle Fill="{StaticResource PrimaryShadeColor}" Height="2500" Width="1" Canvas.Left="605"/>
                                    <Rectangle Fill="{StaticResource PrimaryShadeColor}" Height="2500" Width="1" Canvas.Left="805"/>
                                    <Rectangle Fill="{StaticResource PrimaryShadeColor}" Height="2500" Width="1" Canvas.Left="1005"/>
                                    <Rectangle Fill="{StaticResource PrimaryShadeColor}" Height="2500" Width="1" Canvas.Left="1205"/>
                                    <Rectangle Fill="{StaticResource PrimaryShadeColor}" Height="2500" Width="1" Canvas.Left="1405"/>
                                    <Rectangle Fill="{StaticResource PrimaryShadeColor}" Height="2500" Width="1" Canvas.Left="1605"/>
                                </Canvas>

                                <Canvas Name="entriesContainer" Canvas.ZIndex="50" Canvas.Top="50" Canvas.Left="100" Height="200" Width="200" FocusManager.IsFocusScope="True" Background="Transparent">
                                    <Canvas.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="AliceBlue"/>
                                        </Style>
                                    </Canvas.Resources>
                                    <userControls:SubjectCard Canvas.Top="69" Canvas.Left="5" Height="50" Width="200"/>
                                    <userControls:SubjectCard Canvas.Top="189" Canvas.Left="5" Height="120" Width="200"/>
                                    <userControls:SubjectCard Canvas.Top="500" Canvas.Left="405" Height="200" Width="200"/>
                                    <userControls:SubjectCard Canvas.Top="500" Canvas.Left="605" Height="200" Width="200"/>
                                    <userControls:SubjectCard Canvas.Top="500" Canvas.Left="805" Height="200" Width="200"/>
                                    <userControls:SubjectCard Canvas.Top="500" Canvas.Left="1005" Height="200" Width="200"/>
                                    <userControls:SubjectCard Canvas.Top="500" Canvas.Left="1205" Height="200" Width="200"/>
                                    <userControls:SubjectCard Canvas.Top="500" Canvas.Left="1405" Height="200" Width="200"/>
                                    <userControls:SubjectCard Canvas.Top="500" Canvas.Left="1605" Height="200" Width="200"/>
                                </Canvas>
                                <Border Name="RoomCategoriesContainer" Canvas.ZIndex="500" BorderThickness="0,0,0,1" BorderBrush="{StaticResource PrimaryShadeColor}" Height="50" Width="auto" Background="AliceBlue" Canvas.Left="{Binding ElementName=recta, Path=Width}">
                                    <StackPanel Orientation="Horizontal" Margin="5,0">
                                        <StackPanel.Resources>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Width" Value="200"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="TextAlignment" Value="Center"/>
                                                <Setter Property="TextWrapping" Value="WrapWithOverflow"/>
                                            </Style>
                                        </StackPanel.Resources>
                                        <TextBlock Text="101"/>
                                        <TextBlock Text="102"/>
                                        <TextBlock Text="103"/>
                                        <TextBlock Text="104"/>
                                        <TextBlock Text="105"/>
                                        <TextBlock Text="106"/>
                                        <TextBlock Text="107"/>
                                        <TextBlock Text="108"/>
                                        <TextBlock Text="109"/>
                                        <TextBlock Text="110"/>
                                        <TextBlock Text="Court"/>
                                        <TextBlock Text="Lab"/>
                                    </StackPanel>
                                </Border>
                                <Border Name="Timeslot" Background="AliceBlue" Canvas.ZIndex="500" Height="auto" Width="100"  Canvas.Top="{Binding ElementName=recta, Path=Height}">
                                    <StackPanel Margin="5,60,5,0">
                                        <StackPanel.Resources>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Height" Value="120"/>
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="TextAlignment" Value="Center"/>
                                                <Setter Property="Foreground" Value="{StaticResource SecondaryShadeColor}"/>
                                            </Style>
                                        </StackPanel.Resources>
                                        <TextBlock Text="5:00 AM"/>
                                        <TextBlock Text="6:00 AM"/>
                                        <TextBlock Text="7:00 AM"/>
                                        <TextBlock Text="8:00 AM"/>
                                        <TextBlock Text="9:00 AM"/>
                                        <TextBlock Text="10:00 AM"/>
                                        <TextBlock Text="11:00 AM"/>
                                        <TextBlock Text="12:00 PM"/>
                                        <TextBlock Text="1:00 PM"/>
                                        <TextBlock Text="2:00 PM"/>
                                        <TextBlock Text="3:00 PM"/>
                                        <TextBlock Text="4:00 PM"/>
                                        <TextBlock Text="5:00 PM"/>
                                        <TextBlock Text="6:00 PM"/>
                                        <TextBlock Text="7:00 PM"/>
                                    </StackPanel>
                                </Border>
                                <Border Name="recta" BorderThickness="0,0,0,1" BorderBrush="{StaticResource TertiaryColor}" Canvas.ZIndex="500" Height="50" Width="100" Background="AliceBlue">
                                    <TextBlock Text="Time" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </Canvas>
                        </ScrollViewer>
                    </TabItem.Content>
                </TabItem>
                <TabItem Header="Tuesday"/>
            </TabControl>

            <!-- Unallocated Subjects -->
            <Border Grid.Column="1"
                    Grid.Row="1"
                    BorderBrush="{StaticResource SecondaryShadeColor}"
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Rectangle Fill="{StaticResource ShadedSecondaryColor}" Grid.Column="1"/>
                    <TextBlock Text="Unallocated Subjects"
                               Margin="3"
                               Foreground="{StaticResource PrimaryBackground}"/>
                </Grid>
            </Border>
            
            
        </Grid>
    </Grid>
</Window>
