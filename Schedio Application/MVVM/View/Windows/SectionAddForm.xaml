<Window x:Class="Schedio_Application.MVVM.View.Windows.SectionAddForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Schedio_Application.MVVM.View.Windows"
        mc:Ignorable="d"
        Title="SectionAddForm" Height="450" Width="800"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Border Background="{StaticResource PrimaryBackground}" 
            BorderThickness="1" 
            CornerRadius="10" 
            BorderBrush="{StaticResource SecondaryShadeColor}">
        <Grid Margin="40,30,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal"
                        Margin="20,0">
                <Image Source="pack://application:,,,/Schedio Application;component/Resources/Images/section-1.png"
                       Stretch="Uniform"
                       Height="70"
                       VerticalAlignment="Center"/>
                <TextBox Text="Section Name"
                         Style="{StaticResource TitleTextBox}"
                         FontSize="22"
                         VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Grid.Row="2"
                        HorizontalAlignment="Right">
                <Button Style="{StaticResource CancelButton}"
                        Content="Cancel"
                        MinWidth="90"
                        FontSize="15"
                        Margin="10,0"
                        IsCancel="True"/>
                <Button Style="{StaticResource ConfirmButton}"
                        Content="Save"
                        MinWidth="90"
                        FontSize="15"
                        Margin="10,0"/>
            </StackPanel>
        </Grid>
    </Border>

</Window>
